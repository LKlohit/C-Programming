//day number and weekday//
#include<stdio.h>
  int main()
{
  int i;
  printf("enter the day number");
  scanf("%d",&i);
  if(i==1)
    printf("monday");
  if(i==2)
    printf("tuesday");
  if(i==3)
    printf("wednesday");
  if(i==4)
    printf("thursday");
  if(i==5)
    printf("friday");
  if(i==6)
    printf("saturday");
  if(i==7)
    printf("sunday");
  return 0;
}
